<idea-plugin version="2">
    <id>com.yx.markdown.anchor.generator</id>
    <name>Markdown Anchor Generator</name>
    <version>1.0</version>
    <vendor>yx</vendor>

    <description><![CDATA[
      <br>
    ]]></description>

    <!--<change-notes><![CDATA[-->
